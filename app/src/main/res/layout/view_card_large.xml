<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:id="@+id/card_large_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/card_large_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choosing the Right Chain Saw"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/card_large_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Testing!"
            android:textSize="14sp"
            android:layout_below="@+id/card_large_title"/>
    </RelativeLayout>
    <Button
        style="?android:buttonBarButtonStyle"
        android:id="@+id/card_large_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="14sp"
        android:text="Learn More"/>
</LinearLayout>
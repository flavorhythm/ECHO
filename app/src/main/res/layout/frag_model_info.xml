<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_garage"
    android:layout_gravity="bottom">

    <widget.ModelInfoView
        android:id="@+id/modelInfo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/bg_model_info_upper_fade"/>
        <RelativeLayout
            android:id="@+id/modelInfo_group_btnGroup"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/bg_garage">
            <Button
                style="?android:buttonBarButtonStyle"
                android:id="@+id/modelInfo_btn_documentation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manuals"
                android:textSize="12dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/modelInfo_btn_maintenance"
                android:drawableTop="@drawable/ic_vector_docs_dark"/>
            <Button
                style="?android:buttonBarButtonStyle"
                android:id="@+id/modelInfo_btn_maintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maintenance"
                android:textSize="12dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:drawableTop="@drawable/ic_vector_maintenance"/>
            <Button
                style="?android:buttonBarButtonStyle"
                android:id="@+id/modelInfo_btn_specs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specs"
                android:textSize="12dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/modelInfo_btn_maintenance"
                android:drawableTop="@drawable/ic_vector_specs"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>